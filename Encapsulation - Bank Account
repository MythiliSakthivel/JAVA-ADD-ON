package selectionprg;

class Account
{
	private String HolderName;
	private int Bank_Balance;
	Account(String HolderName , int Bank_Balance)
	{
		this.HolderName = HolderName;
		this.Bank_Balance = Bank_Balance;
	}
	public String getHolderName()
	{
		return HolderName;
	}
	public int getBank_Balance()
	{
		return Bank_Balance;
	}
	public void Deposit(int amount)
	{
		Bank_Balance += amount;
		System.out.println("Deposit Amount: "+amount);
	}
	public void Withdrawal(int amount)
    {
        if(amount <= Bank_Balance)
        {
            Bank_Balance -= amount;
            System.out.println("Withdraw Amount: " + amount);
        }
        else
        {
            System.out.println("Insufficient Balance!");
        }
    }
}
public class Encapsulation 
{
	public static void main(String[] args) 
	{
		Account ac = new Account("JAVA" , 27000);
		System.out.println("Account HolderName: "+" "+ac.getHolderName());
		System.out.println("Current Bank_Balance: "+" "+ac.getBank_Balance());
		ac.Deposit(2000);
		System.out.println("Amount Creadited: " +ac.getBank_Balance());
		ac.Withdrawal(5000);
        System.out.println("After Withdrawal Balance: " + ac.getBank_Balance());
	}
}
